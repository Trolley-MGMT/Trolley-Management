// Declarative //
pipeline {
    agent any

    stages {
        stage('Setup parameters') {
            steps {
                script {
                    properties([
                        parameters([
                            choice(
                                choices: ['0', '1', '2','3'],
                                name: 'NUM_NODES'
                            ),
                            choice(
                                choices: ['1.22.4','1.21.7','1.20.13','1.19.13'],
                                name: 'AKS_VERSION'
                            ),
                            choice(
                                choices: ['1','2','4','8','12', '24', '48', '96', '168'],
                                name: 'EXPIRATION_TIME'
                            ),
                            booleanParam(
                                defaultValue: true,
                                description: '',
                                name: 'BOOLEAN'
                            ),
                            string(
                                defaultValue: 'myResourceGroup',
                                name: 'RESOURCE_GROUP',
                                trim: true
                            ),
                            string(
                                defaultValue: '',
                                name: 'HELM_INSTALLS',
                                trim: true
                            ),
                            string(
                                defaultValue: 'trolley-test',
                                name: 'CLUSTER_NAME',
                                trim: true
                            )
                        ])
                    ])
                }
            }
        }
    }
        stage('Build') {
            steps {
                echo 'Building..'
            }
        }
        stage('Test') {
            steps {
                echo 'Testing..'
            }
        }
        stage('Deploy') {
            steps {
                echo 'Deploying....'
            }
        }
    }